<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SpectrumTV.Templates"
    x:Class="SpectrumTV.Pages.HomePage"
    xmlns:link="clr-namespace:SpectrumTV"
    xmlns:effects="clr-namespace:SpectrumTV.Effects"
    xmlns:iosSpecific="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    iosSpecific:Page.UseSafeArea="True"
    Background="white"
    Title="Spectrum TV">
    <StackLayout>
        <ScrollView
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand">
            <Grid
                RowSpacing="0"
                ColumnSpacing="0"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" /> <!-- Safe Area -->
                    <RowDefinition Height="60" /> <!-- Logo -->
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="230" /> <!--Cover-->
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Safe Area -->
                <ContentView
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    HeightRequest="30"
                    BackgroundColor="Transparent">
                    <ContentView.Effects>
                        <effects:SafeAreaEffect Flags="Top" />
                    </ContentView.Effects>
                </ContentView>

                <StackLayout
                    Grid.Row="1"
                    Padding="0">
                    <AbsoluteLayout
                        Margin="5,0">
                        <Image
                            x:Name="_logo"
                            Aspect="AspectFit"
                            WidthRequest="170"
                            HeightRequest="70"
                            Source="{x:Static link:AppImages.LogoNav}" />
                    </AbsoluteLayout>
                </StackLayout>

                <!--Cover-->
                <Label
                    Grid.Row="2"
                    Margin="15,20,0,0"
                    FontSize="30"
                    FontAttributes="Bold"
                    TextColor="{DynamicResource PrimaryColor}"
                    Text="Trending"/>

                <Image
                    Grid.Row="3"
                    Margin="0, 15,0,20"
                    HorizontalOptions="FillAndExpand"
                    HeightRequest="600"
                    Source="{Binding MovieCoverTrend}"
                    Aspect="AspectFill" />

                <!--Upcoming Movies Section-->
                <Label
                    Grid.Row="4"
                    FontSize="30"
                    FontAttributes="Bold"
                    TextColor="{DynamicResource PrimaryColor}"
                    Margin="15,0,0,0"
                    Text="Upcoming Movies"/>

                <CollectionView
                    Grid.Row="5"
                    ItemsSource="{Binding ResultsUpcomingMovies, Mode=TwoWay}"
                    Margin="0,15"
                    VerticalOptions="FillAndExpand"
                    Background="Transparent"
                    HeightRequest="200">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout
                            Orientation="Horizontal"
                            HorizontalItemSpacing="10"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <views:MovieItemView />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                 </CollectionView>

                <!--Top Rates Movies Section-->
                <Label
                    Grid.Row="6"
                    FontSize="30"
                    FontAttributes="Bold"
                    TextColor="{DynamicResource PrimaryColor}"
                    Margin="15,0,0,0"
                    Text="Top Rated Movies"/>

                <CollectionView
                    Grid.Row="7"
                    x:Name="CollectionList"
                    ItemsSource="{Binding ResultsTopMoviesRated, Mode=TwoWay}"
                    Margin="0,15"
                    VerticalOptions="FillAndExpand"
                    Background="Transparent"
                    HeightRequest="200">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout
                            Orientation="Horizontal"
                            HorizontalItemSpacing="10"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <views:MovieItemView />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                 </CollectionView>

                <!-- Loading Indicator -->
                <ActivityIndicator
                    Grid.Column="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Color="DarkGray"
                    IsRunning="{Binding IsBusy}">
                </ActivityIndicator>
            </Grid>
        </ScrollView>
    </StackLayout>
</ContentPage>
